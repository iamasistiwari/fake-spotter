generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  password String?
  provider String
  chats    Chats[]
}

model Chats {
  id            String   @id @default(uuid())
  type          ChatType
  modelResponse String
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}

enum ChatType {
  deepfake
  news
}
